<?xml version="1.0" encoding="UTF-8"?>
<project name="module_chattree" default="compile.module.chattree">
  <dirname property="module.chattree.basedir" file="${ant.file.module_chattree}"/>
  
  <property name="module.jdk.home.chattree" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.chattree" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.chattree" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.chattree" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="chattree.output.dir" value="${module.chattree.basedir}/out/production/ChatTree"/>
  <property name="chattree.testoutput.dir" value="${module.chattree.basedir}/out/test/ChatTree"/>
  
  <path id="chattree.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="chattree.module.production.classpath">
    <path refid="${module.jdk.classpath.chattree}"/>
  </path>
  
  <path id="chattree.runtime.production.module.classpath">
    <pathelement location="${chattree.output.dir}"/>
  </path>
  
  <path id="chattree.module.classpath">
    <path refid="${module.jdk.classpath.chattree}"/>
    <pathelement location="${chattree.output.dir}"/>
  </path>
  
  <path id="chattree.runtime.module.classpath">
    <pathelement location="${chattree.testoutput.dir}"/>
    <pathelement location="${chattree.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.chattree">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.chattree">
    <patternset refid="excluded.from.module.chattree"/>
  </patternset>
  
  <path id="chattree.module.sourcepath">
    <dirset dir="${module.chattree.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.chattree" depends="compile.module.chattree.production,compile.module.chattree.tests" description="Compile module ChatTree"/>
  
  <target name="compile.module.chattree.production" depends="register.custom.compilers" description="Compile module ChatTree; production classes">
    <mkdir dir="${chattree.output.dir}"/>
    <javac2 destdir="${chattree.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.chattree}/javac">
      <compilerarg line="${compiler.args.chattree}"/>
      <bootclasspath refid="chattree.module.bootclasspath"/>
      <classpath refid="chattree.module.production.classpath"/>
      <src refid="chattree.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.chattree"/>
    </javac2>
    
    <copy todir="${chattree.output.dir}">
      <fileset dir="${module.chattree.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.chattree.tests" depends="register.custom.compilers,compile.module.chattree.production" description="compile module ChatTree; test classes" unless="skip.tests"/>
  
  <target name="clean.module.chattree" description="cleanup module">
    <delete dir="${chattree.output.dir}"/>
    <delete dir="${chattree.testoutput.dir}"/>
  </target>
</project>